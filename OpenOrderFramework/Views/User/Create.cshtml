@model OpenOrderFramework.Models.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_FacyboxLayout.cshtml";
}

<div style="text-align:center;display:inline">
    <h2>@ViewBag.ProgramName <small>@Resources.Common.Create</small></h2>
</div>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group noDisplay">
            @Html.LabelFor(model => model.CompanyID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CompanyID, new { htmlAttributes = new { @class = "form-control", @Value = "Enter" } })
                @Html.ValidationMessageFor(model => model.CompanyID)
            </div>
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6">
            @Html.LabelFor(model => model.UserID, new { @class = "control-label col-md-8 left" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserID)
                @Html.ValidationMessageFor(model => model.UserID)
            </div>
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6">
            @Html.LabelFor(model => model.UserPassword, new { @class = "control-label col-md-8 left" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserPassword)
                @Html.ValidationMessageFor(model => model.UserPassword)
            </div>
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6">
            @Html.LabelFor(model => model.EmpID, new { @class = "control-label col-md-8 left" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EmpID, new { @class = "field-EmpID" })
                <input id="EmpName" class="field-EmpName" />
                @Html.ValidationMessageFor(model => model.EmpID)
                @Html.ActionLink(" ", "SelectEmp", "Employee", new { id = "S1", EmpID = "EmpID", EmpName = "EmpName" }, new { @class = "fancybox fancybox.iframe glyphicon glyphicon-list-alt", role = "group" })
            </div>
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-8 left" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @*@Html.ValidationMessageFor(model => model.Email)*@
            </div>
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6">
            @Html.LabelFor(model => model.Memo, new { @class = "control-label col-md-8 left" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Memo)
                @*@Html.ValidationMessageFor(model => model.Memo)*@
            </div>
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6">
            @Html.LabelFor(model => model.InValidDate, new { @class = "control-label col-md-8 left" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.InValidDate, new { @class = "datetimepicker" })
                @*@Html.ValidationMessageFor(model => model.InValidDate)*@
            </div>
        </div>

        <div class="form-group noDisplay">
            @Html.LabelFor(model => model.CreateUserID, new { @class = "control-label col-md-8 left" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CreateUserID, new { htmlAttributes = new { @class = "form-control", @Value = "Enter" } })
                @Html.ValidationMessageFor(model => model.CreateUserID)
            </div>
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.CreateDateTime, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CreateDateTime, new { htmlAttributes = new { @class = "form-control", @Value = @DateTime.Now } })
                    @Html.ValidationMessageFor(model => model.CreateDateTime)
                </div>
            </div>*@

        <div class="form-group noDisplay">
            @Html.LabelFor(model => model.ModifyUserID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ModifyUserID, new { htmlAttributes = new { @class = "form-control", @Value = "Enter" } })
                @*@Html.DropDownListFor(model => model.ModifyUserID, (IEnumerable<SelectListItem>)ViewBag.Categories, "", new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.ModifyUserID)

            </div>
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.ModifyDateTime, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ModifyDateTime, new { htmlAttributes = new { @class = "form-control", @Value =@DateTime.Now } })
                    @Html.ValidationMessageFor(model => model.ModifyDateTime)
                </div>
            </div>*@

        <div class="form-group col-md-12">
            <div class="control-label text-right">
                <input type="submit" value=@Resources.Common.btnCreate class="btn btn-default" />
            </div>
        </div>
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
